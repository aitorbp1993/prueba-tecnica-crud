				{
					"name": "Login - Valid credentials",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response contains access_token\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('access_token');",
									"});",
									"",
									"pm.test(\"Response contains refresh_token\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('refresh_token');",
									"});",
									"",
									"pm.test(\"Response has correct token type\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.token_type).to.equal('Bearer');",
									"});",
									"",
									"var jsonData = pm.response.json();",
									"pm.environment.set('accessToken', jsonData.access_token);",
									"pm.environment.set('refreshToken', jsonData.refresh_token);",
									"pm.environment.set('tokenType', jsonData.token_type);"
								],
								"type": "text/javascript",
								"packages": {}
							}
